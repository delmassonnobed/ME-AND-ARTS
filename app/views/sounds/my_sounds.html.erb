
<% @sounds.each do |sound| %>
<% if sound.mp3_file.attachment %>
  <%= link_to sound.mp3_file.attachment.filename, rails_blob_path(sound.mp3_file.attachment, disposition: 'attachment') %>
  <audio id="player" controls controlsList="nodownload">
      <source src="<%= sound.audio_url %>" type="audio/mp3" />
  </audio>
  <% end %>
<% end %>


