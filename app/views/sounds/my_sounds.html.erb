<style>
  .wrapper-box {
    box-shadow: 0 0 15px rgba(2, 0, 0, 0.2);
    background-color: black;
    opacity: 50%;
    margin: 100px;
    border-radius: 10px;
    padding: 10px;
  }
  .my_sounds_card {
    padding: 10px;
    border-top: 3px solid red;
    line-height: 2;
  }
  .my_sounds_image {
    width: 20%;
  }
  .my_sounds_image img {
    border-radius: 5px;
  }
  .my_sounds_title {
    width: 20%;
  }
  .my_sounds_genre {
    width: 15%;
  }
  .my_sounds_bpm {
    width: 15%;
  }
  .my_sounds_player {
    width: 30%;
  }
  .cloudi_image {
    border-radius: 5px;
  }

  #SBPolice {
    color: white;
    font-family: 'Courier New', monospace;
    font-weight: 900;
  }

</style>
<div class="wrapper-box">
  <div id="SBPolice" class="d-flex my_sounds_card">
    <div class="my_sounds_title d-flex align-items-center">&nbsp;&nbsp;&nbsp;&nbsp;Title</div>
    <div class="my_sounds_genre d-flex align-items-center">Genre</div>
    <div class="my_sounds_bpm d-flex align-items-center">BPM</div>
    <div class="my_sounds_bpm d-flex align-items-center">Price</div>
    <div class="my_sounds_player d-flex align-items-center"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Listen And Download</div>
  </div>

  <% @sounds.each do |sound| %>
    <div class="d-flex my_sounds_card">



      <div class="my_sounds_title d-flex align-items-center"><%= sound.title %></div>
      <div class="my_sounds_genre d-flex align-items-center"><%= sound.genre %></div>
      <div class="my_sounds_bpm d-flex align-items-center"><%= sound.bpm %></div>
      <div class="my_sounds_bpm d-flex align-items-center"><%= sound.price %> $</div>
      <div class="my_sounds_player d-flex align-items-center">
        <audio id="player-<%= sound.id %>" controls>
          <source src="<%= sound.audio_url %>" type="audio/mp3" />
        </audio>
      </div>
    </div>
  <% end %>
</div>


